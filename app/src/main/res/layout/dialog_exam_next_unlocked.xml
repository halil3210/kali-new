<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="@drawable/dialog_exam_unlock_background">

    <!-- Graduation Cap Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ“"
        android:textSize="80sp"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/examTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exam 2\nUnlocked!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="16dp" />

    <!-- Description -->
    <TextView
        android:id="@+id/examUnlockDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations! You passed Exam 1.\n\nThe next challenge awaits you!"
        android:textSize="16sp"
        android:textColor="#CCFFFFFF"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="24dp" />

    <!-- Exam Stats -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#20FFFFFF"
        android:padding="16dp"
        android:layout_marginBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Passed"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/passedExam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exam 1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your Score"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/examScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95%"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FFD700" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Errors"
                android:textSize="14sp"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/examErrors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 / 10"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />
        </LinearLayout>
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startNextExamButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Exam 2"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#FF5722"
            android:textColor="#FFFFFF"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:layout_marginEnd="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/laterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Later"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:backgroundTint="#607D8B"
            android:textColor="#FFFFFF"
            android:paddingStart="32dp"
            android:paddingEnd="32dp" />
    </LinearLayout>

</LinearLayout>

