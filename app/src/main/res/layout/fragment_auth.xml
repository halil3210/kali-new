<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/modern_background">

    <!-- Subtle gradient overlay -->
    <View
        android:id="@+id/shineOverlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shine_gradient"
        android:alpha="0.15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 3D Rotating Logo Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/logoContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:strokeWidth="0dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- 3D Rotation Container -->
        <FrameLayout
            android:id="@+id/logoRotationContainer"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:clipChildren="false">

            <!-- Front Side - App Icon - Centered -->
            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter" />

            <!-- Back Side - KLCP Logo - LARGER and Centered -->
            <ImageView
                android:id="@+id/klcpLogo"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/klcp_logo"
                android:contentDescription="KLCP Logo"
                android:scaleType="fitCenter"
                android:alpha="0.0"
                android:rotationY="180" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="32dp"
        android:text="Welcome to KLCP Quiz"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:textAlignment="center"
        android:letterSpacing="0.02"
        app:layout_constraintTop_toBottomOf="@id/logoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/welcomeSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        android:text="Practice your Linux Certification knowledge with 375+ questions"
        android:textSize="18sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="24dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/welcomeSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Continue with Google Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleSignInButton"
            android:visibility="gone"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:text=""
            app:icon="@drawable/ic_google"
            app:iconTint="@android:color/white"
            app:iconSize="32dp"
            app:iconPadding="0dp"
            app:backgroundTint="#4285F4"
            app:cornerRadius="34dp"
            app:elevation="12dp"
            app:rippleColor="#50FFFFFF"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:gravity="center" />

        <!-- Sign Up Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="Sign Up"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:letterSpacing="0.02"
            app:background="@drawable/modern_button_primary"
            app:cornerRadius="20dp"
            app:elevation="12dp"
            app:rippleColor="#50FFFFFF"
            android:layout_marginBottom="16dp" />

        <!-- Continue as Guest Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/guestButton"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:text="Continue as Guest"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:letterSpacing="0.02"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="2dp"
            app:cornerRadius="20dp"
            app:elevation="0dp"
            app:rippleColor="#50FFFFFF" />

        <!-- Info Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Try a demo quiz with 5 questions"
            android:textSize="14sp"
            android:textColor="@color/text_tertiary"
            android:textAlignment="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
