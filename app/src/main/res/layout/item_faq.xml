<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#40FFFFFF"
    app:strokeColor="#60FFFFFF"
    app:strokeWidth="1dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Question -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How do I unlock Marathon mode?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            tools:text="How do I unlock Marathon mode?" />

        <!-- Answer (expandable) -->
        <TextView
            android:id="@+id/answerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Answer the first 50 questions correctly in the regular quiz mode."
            android:textSize="16sp"
            android:textColor="#CCFFFFFF"
            android:lineSpacingExtra="4dp"
            android:visibility="gone"
            tools:text="Answer the first 50 questions correctly in the regular quiz mode." />

        <!-- Expand/Collapse Icon -->
        <ImageView
            android:id="@+id/expandIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/arrow_down_float"
            android:tint="#FFFFFF" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

