<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#40FFFFFF"
    app:strokeColor="#60FFFFFF"
    app:strokeWidth="1dp"
    app:rippleColor="#80FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Tool Name -->
        <TextView
            android:id="@+id/toolName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wireshark"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tool Description -->
        <TextView
            android:id="@+id/toolDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Network protocol analyzer"
            android:textSize="15sp"
            android:textColor="#CCFFFFFF"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/toolName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Category Tag -->
        <com.google.android.material.chip.Chip
            android:id="@+id/categoryChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Sniffing &amp; Spoofing"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:chipBackgroundColor="#704CAF50"
            app:chipStrokeWidth="1dp"
            app:chipStrokeColor="#909CCC65"
            app:chipCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/toolDescription"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

