<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp"
    android:paddingTop="60dp"
    android:paddingBottom="28dp"
    app:shimmer_auto_start="true"
    app:shimmer_base_alpha="0.1"
    app:shimmer_highlight_alpha="0.3"
    app:shimmer_duration="1200">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Logo Shimmer -->
        <View
            android:id="@+id/shimmerLogo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Welcome Text Shimmer -->
        <View
            android:id="@+id/shimmerWelcome"
            android:layout_width="200dp"
            android:layout_height="24dp"
            android:layout_marginTop="24dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/shimmerLogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Name Text Shimmer -->
        <View
            android:id="@+id/shimmerName"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/shimmerWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stats Card Shimmer -->
        <View
            android:id="@+id/shimmerStatsCard"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/shimmerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp" />

        <!-- Quiz Button Shimmer -->
        <View
            android:id="@+id/shimmerQuizButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/shimmerStatsCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp" />

        <!-- Practice Button Shimmer -->
        <View
            android:id="@+id/shimmerPracticeButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@color/shimmer_placeholder"
            app:layout_constraintTop_toBottomOf="@id/shimmerQuizButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>
