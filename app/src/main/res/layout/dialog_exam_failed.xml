<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_failed_background"
    android:padding="32dp">

    <!-- Failed Icon -->
    <ImageView
        android:id="@+id/failedIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@android:drawable/ic_delete"
        android:tint="#F44336"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/failedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="❌ FAILED"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#F44336"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/failedIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Failed Message -->
    <TextView
        android:id="@+id/failedMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Unfortunately not passed.\nKeep practicing and try again!"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/failedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Score Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/scoreCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#40FFFFFF"
        app:strokeColor="#60F44336"
        app:strokeWidth="2dp"
        app:layout_constraintTop_toBottomOf="@id/failedMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/scoreText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="65 / 80"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="#F44336" />

            <TextView
                android:id="@+id/percentageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="81.3%"
                android:textSize="24sp"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/errorsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="❌ 15 Errors (Max: 10)"
                android:textSize="16sp"
                android:textColor="#CCFFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:text="You need at least 70/80 ✅"
                android:textSize="14sp"
                android:textColor="#AFFFFFFF"
                android:textStyle="italic" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Retry Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/retryButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="24dp"
        android:text="Try Again"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#F44336"
        app:strokeColor="#EF5350"
        app:strokeWidth="2dp"
        app:cornerRadius="32dp"
        app:elevation="8dp"
        app:rippleColor="#80FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/scoreCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/backButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Back to Overview"
        android:textSize="16sp"
        android:textColor="#CCFFFFFF"
        app:layout_constraintTop_toBottomOf="@id/retryButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

