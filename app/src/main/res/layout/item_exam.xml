<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="6dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#40FFFFFF"
    app:strokeColor="#60FFFFFF"
    app:strokeWidth="1dp"
    app:rippleColor="#80FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Exam Number Badge -->
        <TextView
            android:id="@+id/examNumber"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/exam_number_badge"
            android:gravity="center"
            android:text="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Exam Title -->
        <TextView
            android:id="@+id/examTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Exam 1: Linux Fundamentals"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="#80000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintTop_toTopOf="@id/examNumber"
            app:layout_constraintStart_toEndOf="@id/examNumber"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/examDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Basic Linux concepts, file system, and commands"
            android:textSize="14sp"
            android:textColor="#CCFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/examTitle"
            app:layout_constraintStart_toEndOf="@id/examNumber"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Difficulty Badge -->
        <com.google.android.material.chip.Chip
            android:id="@+id/difficultyChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="EASY"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:chipBackgroundColor="#704CAF50"
            app:chipStrokeWidth="1dp"
            app:chipStrokeColor="#909CCC65"
            app:chipCornerRadius="12dp"
            app:layout_constraintTop_toBottomOf="@id/examDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Info Row -->
        <LinearLayout
            android:id="@+id/infoRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/difficultyChip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â±ï¸ 90 Min"
                android:textSize="13sp"
                android:textColor="#DDFFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“ 80 Q"
                android:textSize="13sp"
                android:textColor="#DDFFFFFF"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/examStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Not Taken"
                android:textSize="13sp"
                android:textColor="#FFC107"
                android:textAlignment="textEnd"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

