                <TextView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="âœ“"
                    android:textSize="20sp"
                    android:textColor="#10B981"
                    android:gravity="center"
                    android:layout_marginEnd="16dp" />
                
