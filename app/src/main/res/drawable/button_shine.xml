<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base layer with gradient -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#90FFFFFF"
                android:centerColor="#70FFFFFF"
                android:endColor="#50FFFFFF"
                android:type="linear" />
            <corners android:radius="32dp" />
        </shape>
    </item>
    
    <!-- Shine overlay -->
    <item android:top="1dp" android:left="1dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#30FFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
            <corners android:radius="32dp" />
        </shape>
    </item>
</layer-list>

